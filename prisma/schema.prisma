generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Team {
  id        Int     @id @default(autoincrement())
  name      String  @unique
  shortName String
}

model Standing {
  id      Int     @id @default(autoincrement())
  team    String
  matches Int
  wins    Int
  losses  Int
  points  Int
  nrr     Float
}

model Match {
  id            Int      @id
  title         String
  shortTitle    String?
  date          DateTime
  venue         String
  teamA         String
  teamB         String
  winner        String?
  winningTeamId Int?
}

